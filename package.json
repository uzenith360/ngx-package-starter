{
  "name": "@uzenith360/ngx-package-starter",
  "version": "0.0.0",
  "description": "An Angular library NPM starter (or example) project to ease setup of Angular libraries as NPM packages from your GitHub repo",
  "scripts": {
    "clean": "rm -rf ./dist",
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run clean && ng build ngx-lib",
    "watch": "ng build --watch --configuration development",
    "prepack": "npm run build",
    "test": "ng test ngx-lib",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uzenith360/ngx-package-starter.git"
  },
  "keywords": [
    "typescript",
    "angular"
  ],
  "author": "@uzenith360",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uzenith360/ngx-package-starter/issues"
  },
  "homepage": "https://github.com/uzenith360/ngx-package-starter#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public",
    "tag": "latest"
  },
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "@angular/animations": "^16.2.7",
    "@angular/cdk": "^16.2.6",
    "@angular/common": "^16.2.7",
    "@angular/compiler": "^16.2.7",
    "@angular/core": "^16.2.7",
    "@angular/forms": "^16.2.7",
    "@angular/material": "^16.2.6",
    "@angular/platform-browser": "^16.2.7",
    "@angular/platform-browser-dynamic": "^16.2.7",
    "@angular/router": "^16.2.7",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.4",
    "@angular/cli": "^16.2.4",
    "@angular/compiler-cli": "^16.2.7",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/jasmine": "~3.10.0",
    "@types/node": "^12.11.1",
    "husky": "^8.0.2",
    "jasmine-core": "~4.0.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.1.0",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "ng-packagr": "^16.1.0",
    "typescript": "~5.1.6"
  }
}